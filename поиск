public  int our_count = 8;
            public Container_for_Zal cont1 = new Container_for_Zal();


            public Controller(Container_for_Zal cont1)
            {
                this.cont1 = cont1;
            }
            public void PoiskSnar()
            {
                int el = 0;
                for (int i = 0; i < cont1.cont.Count; i++)
                {
                    if (our_count==cont1.cont[i].count)
                    {
                        el= cont1.cont[i].count;
                    }
                }
                Console.WriteLine($"Component whith a minimal weight : {cont1.cont[el].count}  is ");
                cont1.cont[el].Print_();
            }
